<html lang="en">

{% extends 'base_template.jinja2' %}
{% block content %}

<head>
    <title>Rocks</title>

</head>
<body>

<h1>Rocks</h1>

<div id="browse">
    <table border="1" cellpadding="5">
        {% if data %}
            <thead>
            <tr>
                {% for key in data[0].keys() %}
                    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                {% endfor %}
            </tr>
            </thead>

            <tbody>
            {% for item in data %}
                <tr>
                    {% for key in item.keys() %}
                        <td> {{ item[key] }} </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        {% endif %}
    </table>
    <p>&nbsp;</p>
</div><!-- browse -->

<div id="search">
    <form id="searchRocks" action="/rocks" method="post">
        <legend><strong>Search Rocks</strong></legend>
        <fieldset>
            <input type="text" class="form-control" id="search" name="search" placeholder="Search criteria" required>
        </fieldset>
        <input type="submit" value="Rock Search" name="Rock_Search" class="btn btn-primary" style="margin:.5rem;">
    </form>
</div>


<div id="insert">
    <form id="insertRock" action="/rocks" method="post">
        <legend><strong>Add Rock</strong></legend>
        <fieldset>

            <label for="userID">Owner: </label>
            <select name="userID" id="userID">
                {% for item in users %}
                    <option value={{ item["userID"] }}> {{ item["fullName"] }} </option>
                {% endfor %}
            </select>

            <label for="name"> Rock Name: </label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Required" required>

            <label> Origin </label>
            <input type="text" class="form-control" id="geoOrigin" name="geoOrigin" placeholder="Required" required>

            <label>Type:</label>
            <select class="form-control" id="type" name="type" placeholder="" required>
                <option value="">-- Rock Type --</option>
                <option value="igneous">Igneous</option>
                <option value="metamorphic">Metamorphic</option>
                <option value="sedimentary">Sedimentary</option>
            </select>

            <label> Chemical Composition </label>
            <input type="text" class="form-control" id="chemicalComp" name="chemicalComp"
                   placeholder="Required" required>

            <br/><label> Description </label><br/>
            <textarea class="form-control" id="description" name="description" rows="5" cols="33"
                      placeholder="Required" required></textarea>

        </fieldset>

        <input type="submit" value="Add Rock" name="Add_Rock" class="btn btn-primary" style="margin:.5rem;">

    </form>
</div><!--insert-->


<br/>


</body>

{% endblock %}

</html>
