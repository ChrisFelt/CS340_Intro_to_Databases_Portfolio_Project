<html lang="en">

{% extends 'base_template.jinja2' %}
{% block content %}

    <head>
        <title>Edit User</title>
    </head>

    <body>
    <div>
        <h2> Editing User:</h2>

        <table border="1" cellpadding="5">

            {% if data %}
                <thead>
                <tr>
                    {% for key in data[0].keys() %}
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                    {% endfor %}
                </tr>
                <tbody>
                {% for item in data %}
                    <tr>
                        {% for key in item.keys() %}
                            <td>{{ item[key] }}</td> {% endfor %}
                    </tr>
                {% endfor %}
            {% endif %}
        </table>
    </div>

    <p>&nbsp;</p>

    <div id="edit">
        <form id="editUser" action="/edit_user/{{ data[0].userID }}" method="post">
            <legend><strong>Update User Details:</strong></legend>
            <fieldset>
                <input type="hidden" value="{{ data[0].userID }}" class="form-control" id="userID" name="userID"
                       required>

                <label for="make">First name:</label>
                <input type="text" value="{{ data[0].firstName }}" class="form-control" id="firstName" name="firstName"
                       pattern="[A-Za-z]{1,}" title="First Name (One word, numbers and special characters not allowed)"
                       required>

                <label for="model">Last name:</label>
                <input type="text" value="{{ data[0].lastName }}" class="form-control" id="lastName" name="lastName"
                       pattern="[A-Za-z]{1,}" title="Last Name (One word, numbers and special characters not allowed)"
                       required>

                <label for="address">Address:</label>
                <input type="text" value="{{ data[0].address }}" class="form-control" id="address" name="address"
                       pattern="[A-Za-z0-9,.#\- ]+" title="Address (Only alphanumeric and [,.#-] allowed)"
                       required>

                <label for="specialization">Specialization:</label>
                <input type="text" value="{{ data[0].specialization }}" class="form-control" id="specialization"
                       name="specialization" pattern="[A-Za-z0-9 ]+" title="Specialization (No special characters allowed)">

                <br/><label for="bio"> Bio </label><br/>
                <textarea class="form-control" id="bio" name="bio" rows="5" cols="33"
                          placeholder="Optional">{{ data[0].bio }}</textarea>

            </fieldset>
            <input type="submit" value="Edit User" name="Edit_User" class="btn btn-primary" style="margin:.5rem;">
            <a href='/users'><input class="btn" type="button" value="Cancel"></a>
        </form>
    </div>
    </body>

{% endblock %}

</html>
