	</div><!--edit-->

	<div id="browse">
		{# <p><a href="#" onClick="newUser()">Add New</a> </p> #}
		<table border="1" cellpadding="5">
			{% if data %}
			<thead>
				<tr>
					{% for key in data[0].keys() %}
					<th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
					{% endfor %} 
				</tr>
			</thead>
			<tbody>
				{% for item in data %}
				<tr>
					{% for key in item.keys() %}
					<td> {{item[key]}} </td> 
					{% endfor %}
					<td><a href="edit_shipment" class="btn btn-default">View Details</a></td>
					<td><a href="delete_people/{{item.id}}" class="btn btn-default">Delete</a></td>
				</tr> 
				{% endfor %} 
			</tbody>
			{% endif %} 
		</table> 
		<p><strong>Headquarters Address:</strong><br/>
		<em>YouBreccia Way 71, Ramersberg 6060 Switzerland</em></p>  
	<p>&nbsp;</p>
	</div>	<!-- browse -->

</body>
</html>
