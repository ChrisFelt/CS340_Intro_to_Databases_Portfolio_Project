<html lang="en">

{% extends 'base_template.jinja2' %}
{% block content %}

<head>
    <title>Shipments</title>
</head>

<body>

	<div id="browse">
		<h1>Shipments</h1>
        <!-- populate browsing section of Shipments-->
		<table border="1" cellpadding="5">
            <legend>To add/remove rocks from a shipment OR modify shipment details, select edit.</legend>
			{% if data %}
			<thead>
				<tr>
					{% for key in data[0].keys() %}
					<th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
					{% endfor %}
				</tr>
			</thead>
			<tbody>
				{% for item in data %}
				<tr>
					{% for key in item.keys() %}
					<td> {{item[key]}} </td>
					{% endfor %}
					<td><a href="edit_shipment/{{ item["Shipment Number"] }}" class="btn btn-default">Edit</a></td>
					<td><a href="delete_shipment/{{ item["Shipment Number"] }}" class="btn btn-default">Delete</a></td>
				</tr> 
				{% endfor %} 
			</tbody>
			{% endif %} 
		</table> 

	<p>&nbsp;</p>
	</div>	<!-- browse -->


	<div id="insert">
		<!-- form to INSERT new data into Shipments-->
		<form id="insertShipment" action="/shipments" method="post">
			<legend><strong>Add Shipment: </strong></legend>
			<fieldset>

				<label for="user">Ship to: </label>
				<select name="user" id="user">
					{% for item in users %}
						{% for user in item %}
							<option> {{item[user]}} </option>
						{% endfor %}
					{% endfor %}
				</select>

				<label for="rock">Rock: </label>
				<select name="rock" id="rock">
					{% for item in rocks %}
						{% for rock in item %}
							<option> {{item[rock]}} </option>
						{% endfor %}
					{% endfor %}
				</select>

				<label for="shipOrigin">Origin: </label>
				<input type="text" class="form-control" id="shipOrigin" name="shipOrigin" pattern="[A-Za-z0-9,.#\- ]+"
                       title="Shipment Origin (Only alphanumeric and [,.#-] allowed)"
                       placeholder="Required" required>

				<label for="shipDest">Destination: </label>
				<input type="text" class="form-control" id="shipDest" name="shipDest" pattern="[A-Za-z0-9,.#\- ]+"
                       title="Shipment Destination (Only alphanumeric and [,.#-] allowed)"
                       placeholder="Required" required>

				<label for="shipDate">Shipment Date: </label>
				<input type="Date" class="form-control" id="shipDate" name="shipDate" placeholder="Required" required>

				<label for="miscNote">Notes: </label>
				<input type="text" class="form-control" id="miscNote" name="miscNote"
                       title="Miscellaneous Notes"
                       placeholder="Optional">

			</fieldset>

		<input type="submit" value="Add Shipment" name="Add_Shipment" class="btn btn-primary" style="margin:.5rem;">


		</form>
	</div><!--insert-->

</body>

    {% endblock %}

</html>
